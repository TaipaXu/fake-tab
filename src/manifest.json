{
    "manifest_version": 3,
    "name": "Fake Tab",
    "version": "0.1.0",
    "description": "Modify browser tab page icon and title, hide the website you are currently browsing",
    "icons": {
        "16": "./assets/icon_16.png",
        "48": "./assets/icon_48.png",
        "128": "./assets/icon_128.png"
    },
    "action": {
        "default_icon": {
            "16": "./assets/icon_16.png",
            "24": "./assets/icon_24.png",
            "32": "./assets/icon_32.png"
        },
        "default_title": "Fake Title",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ]
}
